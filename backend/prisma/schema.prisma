generator client {
  provider = "prisma-client-js"
  // output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  id Int @id() @default(autoincrement())
  name String
  username String @unique
  password String
  level String @default("user")
  status String @default("use")
}

model Room{
  id Int @id() @default(autoincrement())
  name String
  price Int
  status String @default("use")
  RoomImages RoomImage[]
  RoomRentDetail RoomRentDetail[]

}

model RoomImage{
  id Int @id() @default(autoincrement())
  name String
  roomId Int
  Room Room @relation(fields: [roomId],references: [id])
}

model RoomRent{
  id Int @id() @default(autoincrement())
  customerName String
  customerPhone String
  rentDate DateTime
  checkinDate DateTime?
  checkoutDate DateTime?
  find Int?
  remark String?
  RoomRentDetail RoomRentDetail[]
  payDate DateTime?
}

model RoomRentDetail{
  id Int @id() @default(autoincrement())
  roomId Int
  roomRentId Int
  Room Room @relation(fields: [roomId],references: [id])
  RoomRent RoomRent @relation(fields: [roomRentId],references: [id])
}
